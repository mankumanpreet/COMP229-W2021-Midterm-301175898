<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <h3>Favourite Books List </h3>
          <!-- ------------------------ -->
          <!-- FIX THE ADD BUTTON BELOW -->
          <!-- ------------------------ -->
          <div class="addbtn" style="height: 5%; padding-bottom: 25px">
          <a href="/books/add" class="btn btn-primary col-md-offset-10"><i class="fa fa-plus"></i> Add a book</a>
          <br>
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
              <thead>
                <tr>
                  <th>Title</th>
                  <th class="text-center">Price</th>
                  <th class="text-center">Author</th>
                  <th class="text-center">Genre</th>
                  <th class="text-center"></th>
                  <th class="text-center"></th>
                </tr>
                </thead>
                <tbody>
                  <% if(books.length===0) {%>
                    <tr>
                      <td
                        colspan="6"
                        style="text-align: center; font-weight: bold; font-size: medium"
                      >
                        No Data Available!
                      </td>
                    </tr>
                  <%}else {%> 
                <!-- Template Row -->
                <% for (let count = 0; count < books.length; count++) { %>
                <tr>
                  <td><%= books[count].Title %></td>
                  <td class="text-center">$<%= books[count].Price %></td>
                  <td class="text-center"><%= books[count].Author %></td>
                  <td class="text-center"><%= books[count].Genre %></td>

                  <td class="text-center">
                      <a href="/books/edit/<%= books[count]._id %>"
                        class="btn btn-success">
                        <i class="fas fa-pencil-alt"></i> Edit</a>
                        
                    <!-- ADD the EDIT BUTTON HERE -->
                  </td>

                  <td class="text-center">
                    <a href="/books/delete/<%= books[count]._id %>"
                      class="btn btn-warning">
                      <i class="fas fa-pencil-alt"></i> Delete</a>
                     
                    
                    <!-- ADD the DELETE BUTTON HERE -->
                  
                  </td>
                </tr>
                <% } %> <% } %>
              </tbody>
            </table>
          </div>
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
          </div>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>


